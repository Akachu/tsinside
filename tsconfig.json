{
  "compilerOptions": {
    "lib": ["ES2016", "ES2017", "ES2018", "DOM"],
    "target": "es5",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    // "noUnusedParameters": true,
    // "noUnusedLocals": true
  },
  "exclude": ["./test"],
  "include": ["./src"]
}
