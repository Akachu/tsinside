{
  "compilerOptions": {
    "lib": ["ES2017", "ES2018"],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": ["./test"],
  "include": ["./src"]
}